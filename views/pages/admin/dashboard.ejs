<% include ../../layouts/top %>
<% include ../../modals/createProduct %>
<% include ../../modals/category %>

<div class="row">
    <div class="col-sm-12">    
        <h1 style="display:inline;">Products</h1>
        <a href="#" data-toggle="modal" data-target="#category-modal" class="pull-right" style="display:inline; margin-left: 15px;"><span class="glyphicon glyphicon-plus align-middle"></span> Create new catagory</a>
    
        <a href="#" data-toggle="modal" data-target="#create-product-modal" class="pull-right" style="display:inline;"><span class="glyphicon glyphicon-plus align-middle"></span> Create new product</a>
    </div>
</div>
<hr>
<div class="row row-eq-height" style="
    display: flex;
    justify-content: space-evenly;">
<% products.forEach((product) => { %>
<% include ../../modals/editProduct %>

    <div class="card" style="width: 20rem;">
            <img class="card-img-top" src="../../../uploads/<%= product.image%>" alt="productImage">
            <div class="card-body productInDashbord">
              <h4 class="card-title"><%= product.title %></h4>
              <p class="card-text"><%= product.category%></p>
              <p>Price: <%= product.price %> $</p>
              <form method="post" action="/product/delete">
                <button type="button" data-toggle="modal" data-target="#edit-product-modal-<%= product.id %>" class="btn btn-primary btn-sm"><i class="material-icons">border_color</i> Edit</button>
                <input type="hidden" name="id" value="<%= product.id%>">
                <button type="submit" class="btn btn-danger btn-sm"><i class="material-icons">delete_forever</i> Delete</button>
             </form>
            </div>
    </div>
<% }); %>
</div>
<% include ../../layouts/bottom %>
