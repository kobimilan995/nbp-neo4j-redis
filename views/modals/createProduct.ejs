<div class="modal fade" id="create-product-modal">
  <div class="modal-dialog" role="document">
    <form method="POST" action="/product/create" enctype="multipart/form-data">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Create a product</h5>
        </div>
        <div class="modal-body">
            <div class="form-group">
              <label for="productTitle">Title</label>
              <input type="text" name="title" class="form-control" id="productTitle" placeholder="Enter title" required>
            </div>
            <div class="form-group">
              <label for="productDescription">Description</label>
              <input type="text" name="description" class="form-control" id="productDescription" placeholder="Description" required>
            </div>

            <div class="form-group">
              <label for="productPrice">Price</label>
              <input type="number" name="price" class="form-control" id="productPrice" placeholder="Price" required>
            </div>

			<div class="form-group">
	            <select class="form-control" name="category">
	            	<% categories.forEach((category) => { %>
						<option value="<%= category.id%>"><%= category.title%></option>
	            	<% }); %>
				</select>
			</div>

            <div class="form-group">
              <label for="productImage">Product image</label>
              <input type="file" name="image" class="form-control" id="productImage" class="file" required>
            </div>
            
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Create</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </form>
  </div>
</div>